{
  "name": "pub-ui-angular-seed",
  "version": "0.1.0",
  "description": "An AngularJS boilerplate for PubMatic Applications.",
  "scripts": {
    "clean": "rimraf dist/",
    "postinstall": "jspm install",
    "configure": "node scripts/configure.js",
    "start": "node scripts/serve.js",
    "lint": "eslint . && jscs -e **/*.js",
    "test": "npm test",
    "build-html": "node scripts/build-html",
    "bundle": "jspm bundle-sfx bootstrap dist/bundle.js",
    "minify-bundle": "node scripts/minify-bundle.js",
    "postminify-bundle": "rimraf dist/bundle.js && rimraf dist/bundle.js.map",
    "add-version": "hashmark -s -l 8 dist/bundle.min.js 'dist/bundle.min.{hash}.js'",
    "postadd-version": "rimraf dist/bundle.min.js",
    "prebuild": "npm run lint && npm run clean && node scripts/pre-build.js",
    "build": "npm run bundle && npm run minify-bundle && npm run add-version && npm run build-html"
  },
  "keywords": [
    "angularjs",
    "es6",
    "seed",
    "boilerplate"
  ],
  "author": "Core UI Team <core-ui-team@pubmatic.com>",
  "license": "Proprietary",
  "devDependencies": {
    "eslint": "~0.21.2",
    "eslint-plugin-angular": "0.0.7",
    "hashmark": "^3.0.0",
    "html-dist": "^0.1.0",
    "inquirer": "~0.8.5",
    "jscs": "~1.13.1",
    "jspm": "~0.15.6",
    "rimraf": "^2.4.0",
    "uglifyjs": "^2.4.10",
    "shelljs": "~0.5.1",
    "jspm-server": "~0.1.4",
    "chokidar": "~1.0.3",
    "http-proxy": "~1.11.1"
  },
  "dependencies": {},
  "jspm": {
    "directories": {
      "baseURL": "client"
    },
    "dependencies": {
      "angular": "github:angular/bower-angular@^1.4.0",
      "angular-css": "npm:angular-css@^1.0.7",
      "angular-ui-router": "github:angular-ui/ui-router@^0.2.15",
      "core-js": "npm:core-js@~0.9.13",
      "css": "github:systemjs/plugin-css@^0.1.12",
      "ramda": "npm:ramda@^0.14.0",
      "text": "github:systemjs/plugin-text@^0.0.2"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.1.13",
      "babel-runtime": "npm:babel-runtime@^5.1.13",
      "core-js": "npm:core-js@~0.9.13"
    }
  }
}
